<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#689F38</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#73AED581</item>
    </style>

    <!-- Style for the Relative Layout. -->
    <style name="RelativeLayout_ScoreActivity">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background_main</item>
    </style>

    <!-- Style for the first big Linear Layout in the parent Relative Layout. -->
    <style name="LinearLayout_ParentOne">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for the Linear layout childs in the first big Linear Layout. -->
    <style name="LinearLayout_childs">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for the Reset button. -->
    <style name="ResetButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/reset_button_layout_marginBottom</item>
        <item name="android:layout_marginTop">@dimen/main_textview1_marginTop</item>
        <item name="android:background">#14FAFAFA</item>
        <item name="android:textColor">#73FAFAFA</item>
        <item name="android:textSize">22sp</item>
        <item name="android:text">@string/button_reset</item>
    </style>

    <!-- Style for the Score buttons. -->
    <style name="ScoreButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/main_button_marginRight</item>
        <item name="android:layout_marginBottom">@dimen/main_button_marginBottom</item>
        <item name="android:layout_marginLeft">@dimen/main_button_marginLeft</item>
        <item name="android:background">#14FAFAFA</item>
        <item name="android:textColor">#73FAFAFA</item>
        <item name="android:textSize">26sp</item>
        <item name="android:text">@string/button_goal</item>

    </style>

    <!-- Style for the first text view inside of the child's of Linear Layout Parent One . -->
    <style name="MainTextViews1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/main_textview1_marginTop</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/home_name</item>
    </style>

    <!-- Style for the second text view inside of the child's of Linear Layout Parent One . -->
    <style name="MainTextViews2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/main_textview2_marginTop</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:textSize">56sp</item>
        <item name="android:text">@string/initial_score</item>
    </style>

    <!-- Style for the first text view inside of the child's of Linear Layout Parent One . -->
    <style name="MainTextViews3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/main_textview1_marginTop</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/visitor_name</item>
    </style>

    <!-- Style for the second big Linear Layout in the parent Relative Layout. -->
    <style name="LinearLayout_ParentTwo">
        <item name="android:layout_width">@dimen/parentTwo_linear_layout_width</item>
        <item name="android:layout_height">@dimen/parentTwo_linear_layout_height</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_above">@id/reset_id</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:background">@drawable/backgroundd</item>
    </style>

    <!-- Style for the Linear layout child's in the second big Linear Layout. -->
    <style name="LinearLayout_childOneParentTwo">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for the Linear layout child's in the second big Linear Layout. -->
    <style name="LinearLayout_childTwoParentTwo">
        <item name="android:layout_width">@dimen/LinearLayout_childTwoParentTwo_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for the text vies that represent red and yellow corners,
     shots on target , etc.-->
    <style name="StatisticsTextVies">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/secondary_textviews_marginBottom</item>
        <item name="android:layout_marginLeft">@dimen/secondary_textviews_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/secondary_textviews_marginRight</item>
        <item name="android:layout_marginTop">@dimen/secondary_textviews_marginTop</item>
        <item name="android:text">@string/initial_score</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Style for the buttons that represent red and yellow corners,
         shots on target , etc.-->
    <style name="ButtonText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">@dimen/secondary_buttons_width</item>
        <item name="android:layout_height">@dimen/secondary_buttons_height</item>
        <item name="android:layout_marginLeft">@dimen/buttons_margin_left</item>
    </style>

    <!-- Style for the Linear Layout in score_start.xml-->
    <style name="LinearLayout_ScoreStart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/start</item>
    </style>

    <!-- Style for the edit text in score_start.xml-->
    <style name="editText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColorHint">#73FAFAFA</item>
        <item name="android:textColor">#73FAFAFA</item>
        <item name="android:background">#0DFAFAFA</item>
    </style>

    <!-- Style for the start button in score_start.xml-->
    <style name="StartButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/start_game</item>
        <item name="android:background">#0DFAFAFA</item>
        <item name="android:textColor">#73FAFAFA</item>
        <item name="android:textSize">42sp</item>
    </style>

    <!-- Style for the text view that represent a line in the middle of the screen
    between the results for yellow and red cards, etc for the two teams.-->
    <style name="LineInTheMiddle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>